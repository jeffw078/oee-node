<!-- views/soldagem/selecao_soldador.ejs -->
<%- include('../layout', { title: 'Sele√ß√£o de Soldador' }) %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">üë∑‚Äç‚ôÇÔ∏è Sele√ß√£o de Soldador</h4>
                    <p class="mb-0">Clique no seu nome para fazer login</p>
                </div>
                <div class="card-body">
                    <div class="relogio-display">
                        <span id="relogioSelecao"></span>
                    </div>
                    
                    <div class="row">
                        <% soldadores.forEach(soldador => { %>
                            <div class="col-sm-6 col-md-4 mb-3">
                                <button class="btn btn-modulo w-100" 
                                        onclick="selecionarSoldador(<%= soldador.id %>, '<%= soldador.nome_completo %>')">
                                    <%= soldador.nome_completo %>
                                </button>
                            </div>
                        <% }) %>
                    </div>
                    
                    <% if (soldadores.length === 0) { %>
                        <div class="alert alert-warning text-center">
                            <h5>‚ö†Ô∏è Nenhum soldador cadastrado</h5>
                            <p>Entre em contato com o administrador do sistema.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de senha -->
<div class="modal fade" id="modalSenha" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">üîê Digite sua senha</h5>
            </div>
            <div class="modal-body">
                <p>Soldador: <strong id="nomeSoldadorSelecionado"></strong></p>
                <div class="mb-3">
                    <label for="senhaSoldador" class="form-label">Senha:</label>
                    <input type="password" 
                           class="form-control form-control-lg text-center" 
                           id="senhaSoldador" 
                           placeholder="Digite sua senha"
                           maxlength="10"
                           style="font-size: 1.5rem; letter-spacing: 3px;">
                </div>
                <div id="mensagemErro" class="alert alert-danger d-none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="fazerLogin()">Entrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    let soldadorSelecionadoId = null;
    
    function selecionarSoldador(id, nome) {
       soldadorSelecionadoId = id;
       document.getElementById('nomeSoldadorSelecionado').textContent = nome;
       document.getElementById('senhaSoldador').value = '';
       document.getElementById('mensagemErro').classList.add('d-none');
       
       const modal = new bootstrap.Modal(document.getElementById('modalSenha'));
       modal.show();
       
       // Focar no campo senha
       setTimeout(() => {
           document.getElementById('senhaSoldador').focus();
       }, 500);
   }
   
   function fazerLogin() {
       const senha = document.getElementById('senhaSoldador').value;
       const mensagemErro = document.getElementById('mensagemErro');
       
       if (!senha) {
           mensagemErro.textContent = 'Digite sua senha';
           mensagemErro.classList.remove('d-none');
           return;
       }
       
       mostrarLoading();
       
       fetch('/soldagem/login-soldador', {
           method: 'POST',
           headers: {
               'Content-Type': 'application/json'
           },
           body: JSON.stringify({
               soldador_id: soldadorSelecionadoId,
               senha: senha
           })
       })
       .then(response => response.json())
       .then(data => {
           esconderLoading();
           
           if (data.success) {
               window.location.href = data.redirect;
           } else {
               mensagemErro.textContent = data.message;
               mensagemErro.classList.remove('d-none');
               document.getElementById('senhaSoldador').value = '';
               document.getElementById('senhaSoldador').focus();
           }
       })
       .catch(error => {
           esconderLoading();
           mensagemErro.textContent = 'Erro de conex√£o. Tente novamente.';
           mensagemErro.classList.remove('d-none');
       });
   }
   
   // Enter para fazer login
   document.addEventListener('DOMContentLoaded', function() {
       document.getElementById('senhaSoldador').addEventListener('keypress', function(e) {
           if (e.key === 'Enter') {
               fazerLogin();
           }
       });
       
       // Atualizar rel√≥gio
       function atualizarRelogio() {
           document.getElementById('relogioSelecao').textContent = moment().format('HH:mm:ss');
       }
       setInterval(atualizarRelogio, 1000);
       atualizarRelogio();
   });
</script>